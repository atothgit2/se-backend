        "baseUrl": "./",
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",

        "module": "commonjs",
        "target": "es5",
        "lib": [ "es2015", "dom" ],
        
        "allowJs": true,
        "importHelpers": true,
        "noImplicitAny": true,
        // TODO ezt visszakapcsolni, mit csin√°l??? https://bobbyhadz.com/blog/typescript-not-all-code-paths-return-a-value
